{
    "env": {
        "browser": true,
        "es2016": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-tsdoc"
    ],
    "rules": {
        "indent": [ "error", 4, { "SwitchCase": 1 } ],
        "no-trailing-spaces": [ "error" ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ],
        "@typescript-eslint/explicit-function-return-type": "warn",
        "tsdoc/syntax": "warn"
    }
}
